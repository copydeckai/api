{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist/js",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "noImplicitReturns": true, 
    "moduleResolution": "node", 
    "esModuleInterop": true,
    "baseUrl": ".",    
    "forceConsistentCasingInFileNames": true,
	"typeRoots": ["./node_modules/@types", "./src/types"],
	"types": [
		"node"
	]
  },
  "include": ["src/**/*"],
  "exclude": ["src/types/*.ts", "node_modules", ".vscode"]
}
